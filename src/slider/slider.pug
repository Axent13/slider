mixin slider()
  .slider
    .slider__values
      span.slider__start-value.js-slider__start-value
      span.slider__delimiter -
      span.slider__end-value.js-slider__end-value
    .slider__background-line
      .slider__range-line.js-slider__range-line
        .slider__point.slider__point_position_start.js-slider__point_position_start
          .slider__value.slider__value_position_start.js-slider__value_position_start
        .slider__point.slider__point_position_end.js-slider__point_position_end
          .slider__value.slider__value_position_end.js-slider__value_position_end